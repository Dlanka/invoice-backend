# Auth Service Environment Variables
# Copy this file to .env and update the values with your actual configuration

# MongoDB connection string
MONGO_URI=mongodb://mongo:27017/microdb

# JWT Secret for access tokens (use a strong, random string in production)
ACCESS_TOKEN_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Optional: Port configuration (default: 5001)
# PORT=5001

# Optional: Database configuration
# DB_NAME=microdb
# DB_HOST=mongo
# DB_PORT=27017

# Optional: Logging level
# LOG_LEVEL=info

# Optional: CORS settings
# CORS_ORIGIN=http://localhost:3000
